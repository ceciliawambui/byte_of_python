    window.addEventListener('scroll', function(e) {
        var sideButton = document.getElementById("sideButton");
        var sticky = sideButton.offsetTop;
        var offset = window.pageYOffset;
        if (offset >= sticky) {
            sideButton.classList.add("sticky")
        } 
        if (offset < 595){
            sideButton.classList.remove("sticky");
        }
    })
